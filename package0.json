{
  "name": "yet-another-quick-launcher",
  "version": "1.0.0",
  "description": "Yet another desktop quick launcher.",
  "main": "src/main.ts",
  "scripts": {
    "start": "electron .",
    "test": "electron --trace-warnings .",
    "build": "electron-builder",
    "build-for-windows": "electron-builder -w",
    "build-for-linux": "electron-builder -l"
  },
  "build": {
    "appId": "com.chaomixian.yetanothercountdowntimer",
    "productName": "YetAnotherCountdownTimer",
    "files": [
      "src/**/*",
      "webfonts/",
      "src/main.js",
      "assets/"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChaoMixian/YetAnotherQuickLauncher.git"
  },
  "keywords": [
    "Launcher"
  ],
  "author": "ChaoMixian",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ChaoMixian/YetAnotherQuickLauncher/issues"
  },
  "homepage": "https://github.com/ChaoMixian/YetAnotherQuickLauncher#readme",
  "devDependencies": {
    "electron": "^32.0.2",
    "electron-builder": "^25.0.5"
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "esm": "^3.2.25"
  }
}
